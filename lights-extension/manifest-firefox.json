{
  "manifest_version": 2,
  "name": "Lights - Word Highlighter",
  "version": "1.0.0",
  "description": "Smart word highlighting extension with contextual information",
  "permissions": [
    "activeTab",
    "storage",
    "https://api.dictionaryapi.dev/*",
    "https://api.datamuse.com/*",
    "https://en.wikipedia.org/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Lights Extension"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    "popup-modal.html",
    "popup-modal.css"
  ]
}